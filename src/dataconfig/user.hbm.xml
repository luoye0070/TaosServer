<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
        '-//Hibernate/Hibernate Mapping DTD 3.0//EN'  
        'http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd'>  
<hibernate-mapping>  
    <class name="com.lj.taosserver.model.data.UserModel" table="user_info" lazy="false">  
        <id name="id">  
            <generator class="identity"/>  
        </id>  
        <property name="userName" column="r_username" type="java.lang.String" unique="true"></property>  
        <property name="passWord" column="r_password" type="java.lang.String"></property>  
        <property name="auths" column="r_auths" type="java.lang.String"></property> 
    </class>  
</hibernate-mapping>  