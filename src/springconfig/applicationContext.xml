	 <!-- json转换器 -->
	<bean id="jsonConverter" class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">  
		<property name="supportedMediaTypes" value="application/json" />
	</bean>

    <!-- 测试Dao -->
    <bean id="simpleDao" class="com.lj.taosserver.data.dao.impl.SimpleDao">
        <property name="factory" ref="sessionFactory"></property>
    </bean>
    
    <bean id="simpleSearchDao" class="com.lj.taosserver.data.dao.impl.SimpleDao">
        <property name="factory" ref="sessionFactory"></property>
    </bean>
    <bean id="simpleSaveDao" class="com.lj.taosserver.data.dao.impl.SimpleDao">
        <property name="factory" ref="sessionFactory"></property>
    </bean>
    <bean id="simpleUpdateDao" class="com.lj.taosserver.data.dao.impl.SimpleDao">
        <property name="factory" ref="sessionFactory"></property>
    </bean>
    <bean id="simpleDeleteDao" class="com.lj.taosserver.data.dao.impl.SimpleDao">
        <property name="factory" ref="sessionFactory"></property>
    </bean>
    <bean id="dailyReportSearch" class="com.lj.taosserver.service.impl.DailyReportSearch">
        <property name="factory" ref="sessionFactory"></property>
    </bean>
    
    <bean id="licenseGenerator" class="com.lj.taosserver.service.impl.SimpleLicenseGenerator">
    </bean>
    
    
</beans>